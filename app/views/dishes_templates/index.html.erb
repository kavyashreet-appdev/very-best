<div class="page-header p-3">

</div>
<div class="row mb-1">
  <div class="col-md-3">
    <%= search_form_for @q, :class => "collapse", :id => "dishes_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
          <%= f.label :name_cont, "Name contains" %>
          <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
        </div>

     <div class="form-group">
       <div>Cuisine</div>
        <% Cuisine.all.each do |cuisine| %>
          <div>
            <label>
              <%= check_box_tag('q[cuisine_name_eq_any][]', cuisine.name, (true if @q.cuisine_name_eq_any.try(:include?, cuisine.name))) %>
              <%= cuisine.name %>
            </label>
          </div>
        <% end %>
      </div>
    


      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/dishes" class="btn btn-secondary btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-secondary btn-block mb-1" data-toggle="collapse" href="#dishes_filters">
      Show Filters
    </a>
  </div>

  <div class="col-md-6">
    <div class="card">
    <table class="table table-striped table-hover">
      <tr>
        <th>The very best...</th>
        <th>is at...</th>
        <th></th>
      </tr>

      <% @dishes.each do |dish| %>
      <tr>
        <td>
          <a href="/dishes/<%= dish.id %>">
            <%= dish.name %>
          </a>
        </td>
        <td>
          <% if dish.bookmarks.where(user_id: current_user.id).present? %>
            <a href="/venues/<%= dish.bookmarks.where(user_id: current_user.id).last.venue_id %>">
              <%= dish.bookmarks.where(user_id: current_user.id).last.venue.name %>
            </a>
          <% else %>
          <form action="/create_bookmark" method="post">
            <%= select_tag("venue_id", options_from_collection_for_select(Venue.all, :id, :name), :class => "form-control-sm", :placeholder => "Choose a venue") %>
            <input type="hidden" name="dish_id" value="<%= dish.id %>">
            <input type="hidden" name="user_id" value="<%= current_user.id %>">
            <input type="hidden" name="notes" value="">
            <button class="btn-sm btn-primary">
              <i class="fa fa-heart"></i>
            </button>
          </form>
          <% end %>
        </td>
        <td>
          <% if dish.cuisine.present? %>
            <span class="badge badge-primary">
              <%= dish.cuisine.name %>
            </span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    </div>
  </div>
  
  <div class="col-md-3">
    <a href="/venues/new" class="btn btn-success btn-block">Add a new venue</a>
  </div>
</div>